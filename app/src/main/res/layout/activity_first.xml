<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.example.sohee.t.FirstActivity">


    <TextView
        android:id="@+id/titletxtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Count"
        android:textColor="#980000"
        android:textSize="40dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="126dp"
        android:layout_marginRight="117dp"
        android:layout_marginEnd="117dp"
        android:layout_marginBottom="16dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/pawprint"
        android:layout_marginBottom="84dp"
        android:layout_above="@+id/loginbtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_toLeftOf="@+id/titletxtview"
        android:layout_toStartOf="@+id/titletxtview"
        android:layout_marginBottom="57dp" />

    <Button
        android:id="@+id/loginbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signupbtn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:background="@drawable/lineoval"
        android:backgroundTint="#980000"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="277dp"
        android:onClick="OnLoginbtnClicked"/>



    <Button
        android:id="@+id/signupbtn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/pink_empty_oval"
        android:backgroundTint="#980000"
        android:onClick="OnSignUpbtnClicked"
        android:text="SIGN UP"
        android:textColor="#FFFFFF"
        android:textSize="17dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="277dp"
        android:layout_marginBottom="124dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/loginbtn"
        android:layout_alignStart="@+id/loginbtn" />

</RelativeLayout>