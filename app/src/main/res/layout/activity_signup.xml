<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"

    tools:context="com.example.sohee.t.SignUpActivity"
    android:orientation="horizontal">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/ti_1"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_above="@+id/ti_2"
        android:layout_alignLeft="@+id/ti_2"
        android:layout_alignStart="@+id/ti_2"
        android:backgroundTint="#8C8C8C"
        android:foregroundTint="#8C8C8C"
        android:textColorHint="#8C8C8C"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="27dp"
            android:backgroundTint="#8C8C8C"
            android:foregroundTint="#8C8C8C"
            android:hint="이름을 입력하세요"
            android:textColor="#980000"
            android:textColorHint="#8C8C8C" />


    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/titletxtview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        android:text="SIGN UP"
        android:textColor="#980000"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signupenterbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#980000"
        android:text="ENTER"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp"
        android:onClick="insert"/>

    <android.support.design.widget.TextInputLayout

        android:id="@+id/ti_2"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="#8C8C8C"
        android:foregroundTint="#8C8C8C"
        android:textColorHint="#8C8C8C"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_above="@+id/ti_3"
        android:layout_centerHorizontal="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/et_2"
            android:layout_marginBottom="27dp"
            android:backgroundTint="#8C8C8C"
            android:foregroundTint="#8C8C8C"
            android:hint="휴대폰 번호를 입력하세요"
            android:textColor="#980000"
            android:textColorHint="#8C8C8C" />


    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/ti_3"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:backgroundTint="#8C8C8C"
        android:foregroundTint="#8C8C8C"
        android:textColorHint="#8C8C8C"
        app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/signupenterbtn"
        android:layout_alignLeft="@+id/ti_2"
        android:layout_alignStart="@+id/ti_2">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="27dp"
            android:backgroundTint="#8C8C8C"
            android:foregroundTint="#8C8C8C"
            android:hint="가이드 ID를 입력하세요"
            android:textColor="#980000"
            android:textColorHint="#8C8C8C" />


    </android.support.design.widget.TextInputLayout>






</RelativeLayout>